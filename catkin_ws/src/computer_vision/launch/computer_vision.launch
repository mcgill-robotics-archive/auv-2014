<launch>
	<!-- Starts the two computer vision nodes (front and down) -->

  <!-- Loads the appropriate parameters used by the computer vision package -->
  <rosparam command="load" file="$(find computer_vision)/computerVisionParameters.yaml"/>

  <arg name="isUsingSimulation" default="1"/>

  <!-- When we want to run the computer vision in the simulation environment. -->
  <group if="$(arg isUsingSimulation)">
    <!-- Loads parameters that are specific to the simulation environment -->
    <rosparam command="load" file="$(find computer_vision)/simulationEnvironmentSpecificParameters.yaml"/>
  </group>

  <!-- When we don't want to run the computer vision in the simulation environment. -->
  <group unless="$(arg isUsingSimulation)">
    <!-- Loads parameters that are specific to the camera nodes and the competition-->
    <rosparam command="load" file="$(find computer_vision)/cameraNodeSpecificParameters.yaml"/>
  </group>

  <!-- Launches cv_front node. -->
  <node name="cv_front" pkg="computer_vision" type="cv_front_node"  respawn="false" output="screen">
    <!-- Defines what object will the cv_front_node be searching after the initialization. -->
    <param name="cv_front_detect_object" type="" value="" />
  </node>

  <!-- Launches the cv_down node. -->
  <node name="cv_down" pkg="computer_vision" type="cv_down_node"  respawn="false" output="screen">
    <!-- Defines what object will the cv_down_node be searching after the initialization. -->
    <param name="cv_down_detect_object" type="" value="" />
  </node>

</launch>