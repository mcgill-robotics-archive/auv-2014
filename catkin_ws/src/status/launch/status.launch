<launch>
    <!-- blinky -->
    <node name="blinky" pkg="blinky" type="blinky_server.py" respawn="true"/>

    <!-- battery -->
    <node name="battery" pkg="status" type="battery_lights.py"/>

    <!-- ethernet -->
    <node name="connection" pkg="status" type="connection_notifier.py" output="screen"/>

    <!-- temperature -->
    <node name="temperature" pkg="status" type="temperature.py" respawn="false" output="screen"/>

    <!-- usb ports -->
    <node name="usb" pkg="status" type="usb_monit.py" respawn="false" output="screen"/>
</launch>
